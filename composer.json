{
    "name": "acadea/fullsite-search",
    "description": "Laravel package to perform full site search based on Laravel Scout",
    "keywords": [
        "acadea",
        "fullsite-search"
    ],
    "homepage": "https://github.com/acadea/fullsite-search",
    "license": "MIT",
    "authors": [
        {
            "name": "sam-ngu",
            "email": "opensource@acadea.io",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "illuminate/contracts": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.3",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Acadea\\FullSite\\": "src",
            "Acadea\\FullSite\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Acadea\\FullSite\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Acadea\\FullSite\\FullSiteServiceProvider"
            ],
            "aliases": {
                "FullSite": "FullSite"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
